<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".QuizzizQuestionActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        >

        <LinearLayout
            android:id="@+id/LayoutMain"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#64296C"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingHorizontal="10dp">

            <TextView
                android:id="@+id/question"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="center"
                android:text="Chính phủ là cơ quan nhà nước có đặc điểm nào dưới đây?"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="3dp"
                android:layout_weight="1.7"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/questionOne"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginVertical="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_option_one"
                    android:gravity="center"
                    android:text="HELLO MOI NGUOI"
                    android:textColor="@color/white"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/questionTwo"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginVertical="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_option_two"
                    android:gravity="center"
                    android:text="HELLO MOI NGUOI"
                    android:textColor="@color/white"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/questionThree"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginVertical="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_option_three"
                    android:gravity="center"
                    android:text="HELLO MOI NGUOI"
                    android:textColor="@color/white"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/questionFour"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginVertical="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_option_four"
                    android:gravity="center"
                    android:text="HELLO MOI NGUOI"
                    android:textColor="@color/white"
                    android:textSize="15sp" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_Number"
            android:layout_width="89dp"
            android:layout_height="82dp"
            android:gravity="center"
            android:textSize="50sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:text="1"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:visibility="invisible"
            />
    </RelativeLayout>


</LinearLayout>